{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/oauth/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/trpc/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/ping",
      "dest": "/api/ping.js"
    },
    {
      "src": "/public/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "/((?!api).*)",
      "dest": "/public/$1"
    }
  ],
  "buildCommand": "pnpm run build"
}
