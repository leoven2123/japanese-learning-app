{
      "version": 2,
      "buildCommand": "pnpm run build",
      "outputDirectory": "dist/public",
      "builds": [
              {
                        "src": "api/index.ts",
                        "use": "@vercel/node"
              }
      ],
      "rewrites": [
              {
                        "source": "/api/:path*",
                        "destination": "/api/index.ts"
              },
              {
                        "source": "/(.*)",
                        "destination": "/dist/public/index.html"
              }
      ]
}
