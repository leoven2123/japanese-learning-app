{
  "version": 2,
  "buildCommand": "pnpm run build",
  "outputDirectory": "dist/public",
  "functions": {
    "api/index.ts": {
      "includeFiles": "server/**/*,shared/**/*,drizzle/**/*"
    }
  },
  "rewrites": [
    {
      "source": "/api/oauth/:path*",
      "destination": "/api/index.ts"
    },
    {
      "source": "/api/trpc/:path*",
      "destination": "/api/index.ts"
    },
    {
      "source": "/:path((?!api/).*)",
      "destination": "/index.html"
    }
  ]
}
